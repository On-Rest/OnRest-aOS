<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="157dp"
    android:layout_height="164dp"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/round_white_18dp">

    <TextView
        android:id="@+id/dateTV"
        android:layout_width="66dp"
        android:layout_height="24dp"
        android:background="@drawable/round_gray_eae9e7"
        android:textSize="14sp"
        android:textColor="#54514B"
        tools:text="date"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="15dp"
        tools:ignore="MissingConstraints">
    </TextView>

    <TextView
        android:id="@+id/missionTV"
        android:layout_width="66dp"
        android:layout_height="24dp"
        android:textSize="14sp"
        android:textColor="#000000"
        tools:text="mission"
        app:layout_constraintTop_toBottomOf="@id/dateTV"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="16dp">
    </TextView>

    <TextView
        android:id="@+id/missiondetailTV"
        android:layout_width="66dp"
        android:layout_height="24dp"
        android:textSize="14sp"
        android:textColor="#000000"
        tools:text="missiondetail"
        app:layout_constraintTop_toBottomOf="@id/missionTV"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="4dp">
    </TextView>
    
    <ToggleButton
        android:id="@+id/checkTV"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:background="@drawable/check_on_off"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/missiondetailTV"
        android:layout_marginTop="23dp"
        android:textOn=""
        android:textOff="">
    </ToggleButton>


</androidx.constraintlayout.widget.ConstraintLayout>